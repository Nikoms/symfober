<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block page_admin %}




    <section>
        <header>
            <h1>ADMIN</h1>
        </header>
        <section id="admin"></section>
        <footer id="footer">--------</footer>
    </section>


            {% verbatim %}


<script type="text/x-handlebars">
    <ul>
        <li>{{#link-to 'pages'}}Pages{{/link-to}}</li>
        <li>{{#link-to 'posts'}}Posts{{/link-to}}</li>
    </ul>
    {{outlet}}
</script>

<script type="text/x-handlebars" id="pages">
                {{#link-to 'pages.create'}}ADD{{/link-to}}
    <br />
    <table style="float:left;">
        {{#each itemController="page"}}
        <tr>
            <td>{{title}}</td>
            <td>{{#link-to 'page' this}}view (link){{/link-to}}</td>
            <td><button {{action "remove"}} class="destroy">Delete</button></td>
        </tr>
        {{/each}}
    </table>
    <div style="float:left;">{{outlet}}</div>
    <hr style="clear:both"/>
</script>

<script type="text/x-handlebars" data-template-name="pages/create">
    <div>
        <label>Title</label>
        {{input value=title}}

        <label>Slug</label>
        {{input value=slug}}

        <button {{action "save"}}>Créer</button>
        {{#link-to 'pages'}}Back to list{{/link-to}}
    </div>
</script>

<script type="text/x-handlebars" data-template-name="page">
    {{ title }} <br /> {{ body }}
    <hr />
    {{#link-to 'page.edit' }}Edit (link){{/link-to}}
    <hr />
    {{outlet}}
</script>

<script type="text/x-handlebars" data-template-name="page/edit">
    <div>
        <label>Title</label>
        {{input value=title}}

        <label>Slug</label>
        {{input value=slug}}

        <button {{action "save" }}>Edit</button>
        <button {{action "close" }}>Close</button>
        {{#link-to 'pages'}}Back to list{{/link-to}}

    </div>
</script>


            <script type="text/x-handlebars" id="posts">
